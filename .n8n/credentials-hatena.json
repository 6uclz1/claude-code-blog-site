{
  "credentials": {
    "openai-api-key": {
      "name": "OpenAI API",
      "type": "openAiApi",
      "data": {
        "apiKey": "sk-YOUR_OPENAI_API_KEY_HERE"
      },
      "nodesAccess": [
        {
          "nodeType": "n8n-nodes-base.openAi"
        }
      ]
    },
    "github-api-token": {
      "name": "GitHub API Token",
      "type": "githubApi",
      "data": {
        "server": "https://api.github.com",
        "user": "",
        "accessToken": "ghp_YOUR_GITHUB_PERSONAL_ACCESS_TOKEN"
      },
      "nodesAccess": [
        {
          "nodeType": "n8n-nodes-base.github"
        }
      ]
    },
    "github-header-auth": {
      "name": "GitHub Header Auth",
      "type": "httpHeaderAuth",
      "data": {
        "name": "Authorization",
        "value": "token ghp_YOUR_GITHUB_PERSONAL_ACCESS_TOKEN"
      },
      "nodesAccess": [
        {
          "nodeType": "n8n-nodes-base.httpRequest"
        }
      ]
    }
  },
  "environment_variables": {
    "GITHUB_OWNER": "your-github-username",
    "GITHUB_REPO": "claude-code-blog-site",
    "OPENAI_MODEL": "gpt-3.5-turbo",
    "RSS_URL": "https://b.hatena.ne.jp/Buchi_6uclz1/rss"
  },
  "setup_instructions": {
    "openai": {
      "step1": "OpenAI Platform (https://platform.openai.com/) でAPIキーを作成",
      "step2": "上記の 'sk-YOUR_OPENAI_API_KEY_HERE' を実際のAPIキーに置き換え",
      "step3": "使用量制限を適切に設定（推奨: $10-20/月）"
    },
    "github": {
      "step1": "GitHub Settings → Developer settings → Personal access tokens",
      "step2": "必要なスコープ: repo, workflow",
      "step3": "上記の 'ghp_YOUR_GITHUB_PERSONAL_ACCESS_TOKEN' を実際のトークンに置き換え"
    },
    "hatena_rss": {
      "note": "はてなブックマークのRSSフィードは公開されているため認証不要",
      "url_format": "https://b.hatena.ne.jp/[USERNAME]/rss",
      "current_url": "https://b.hatena.ne.jp/Buchi_6uclz1/rss"
    }
  },
  "security_notes": {
    "api_keys": "APIキーは定期的にローテーションすること",
    "permissions": "最小権限の原則を適用",
    "monitoring": "API使用量を定期的に監視",
    "backup": "認証情報のセキュアなバックアップを作成"
  }
}