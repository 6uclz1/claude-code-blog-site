{
  "credentials": {
    "github-token": {
      "name": "GitHub API Token",
      "type": "githubApi",
      "data": {
        "server": "https://api.github.com",
        "user": "",
        "accessToken": "ghp_YOUR_GITHUB_PERSONAL_ACCESS_TOKEN"
      },
      "nodesAccess": [
        {
          "nodeType": "n8n-nodes-base.github"
        }
      ]
    },
    "github-header-auth": {
      "name": "GitHub Header Auth",
      "type": "httpHeaderAuth",
      "data": {
        "name": "Authorization",
        "value": "token ghp_YOUR_GITHUB_PERSONAL_ACCESS_TOKEN"
      },
      "nodesAccess": [
        {
          "nodeType": "n8n-nodes-base.httpRequest"
        }
      ]
    }
  },
  "setup_instructions": {
    "step1": "GitHubでPersonal Access Tokenを作成",
    "required_scopes": ["repo", "workflow", "write:packages"],
    "step2": "上記のトークンを 'ghp_YOUR_GITHUB_PERSONAL_ACCESS_TOKEN' 部分に置き換え",
    "step3": "n8nの認証情報画面でインポートまたは手動設定",
    "step4": "環境変数 GITHUB_OWNER と GITHUB_REPO を設定"
  },
  "environment_variables": {
    "GITHUB_OWNER": "your-github-username",
    "GITHUB_REPO": "claude-code-blog-site",
    "N8N_WEBHOOK_URL": "https://your-n8n-instance.com/webhook"
  }
}